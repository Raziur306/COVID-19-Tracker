<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Force Dark mode. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/background_color</item>
        <!-- Customize your theme here. -->
        <item name="background_color">#FAF8F8</item>
        <item name="text_color">#000000</item>
        <item name="block_back">@color/white</item>
        <item name="nav_text_color">@color/black</item>
        <item name="toolbar_icon_color">@color/black</item>
        <item name="nav_item_setting_title_text_color">@color/black</item>
        <item name="fade_dark">#5A5B5C</item>
        <item name="divider_color">@color/divider_transparent_white</item>
        <item name="blue_and_white">#3334A0</item>
    </style>


    <!--    Dark theme-->
    <style name="Theme.Dark" parent="">
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/background_color</item>
        <!-- Customize your theme here. -->
        <item name="background_color">@color/main_bg</item>
        <item name="block_back">@color/block_bg</item>
        <item name="text_color">@color/white</item>
        <item name="nav_text_color">@color/white</item>
        <item name="toolbar_icon_color">@color/white</item>
        <item name="nav_item_setting_title_text_color">@color/fade_white</item>
        <item name="fade_dark">@color/fade_white</item>
        <item name="blue_and_white">@color/white</item>

    </style>

<!--Others customization-->

    <!--Bottom sheet theme-->
    <style name="bottomSheetTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyle</item>
    </style>

    <style name="bottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <!--    Toolbar Icon Color-->
    <style name="myToolbar" parent="ThemeOverlay.AppCompat">
        <item name="colorControlNormal">?attr/toolbar_icon_color</item>
        <item name="collapsedTitleGravity">center</item>
    </style>


    <!--    navigation title color-->
    <style name="navigation_divider_title_border" parent="">
        <item name="android:textColorSecondary">?attr/nav_item_setting_title_text_color</item>
        <item name="android:listDivider">@color/divider_transparent_white</item>
    </style>

    <!--    search view hint color-->
    <style name="search_view_hint" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:maxWidth">10000dp</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="editTextColor">?text_color</item>
    </style>



    <!--    loginButton-->
    <style name="login_button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">50dp</item>
        <item name="backgroundTint">@color/app_native_color</item>
    </style>


</resources>