<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/itemParent"
    android:paddingTop="7dp"
    >

    <TextView
        android:id="@+id/disNameEng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="?attr/fade_dark"
        android:layout_toEndOf="@+id/counter"
      />

        <TextView
        android:id="@+id/confirmedCase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
            android:textColor="?attr/fade_dark"
            android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/counter"
        android:layout_width="22dp"
        android:textColor="?attr/fade_dark"
        android:layout_height="17dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/disNameBn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="?attr/fade_dark"

        />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/disNameBn"
        android:layout_marginTop="7dp"
        android:background="@color/divider_transparent_white" />


</RelativeLayout>