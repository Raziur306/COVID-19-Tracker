<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.corona.covid_19tracker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_virus"

        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/ic_virus"
        android:supportsRtl="true"
        android:theme="@style/Theme.Light"
        android:usesCleartextTraffic="true">
        <activity android:name="com.corona.covid_19tracker.Activitys.Fragment.CountryViewActivity" />
        <activity android:name="com.corona.covid_19tracker.Activitys.Fragment.HealthCareActivity" />
        <activity android:name="com.corona.covid_19tracker.Activitys.Fragment.BDdataActivity" />
        <activity android:name="com.corona.covid_19tracker.Activitys.Fragment.AboutActivity" />
        <activity android:name="com.corona.covid_19tracker.Activitys.Fragment.HomeActivity" />
        <activity
            android:name="com.corona.covid_19tracker.Activitys.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.corona.covid_19tracker.Activitys.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>

                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1283407186797080~4201179598" />
        <meta-data
            android:name="firebase_analytics_collection_deactivated"
            android:value="true" />
        <meta-data
            android:name="google_analytics_adid_collection_enabled"
            android:value="false" />
    </application>

</manifest>